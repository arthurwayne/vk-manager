{
  "parserOptions": {
    "ecmaVersion": 8
  },
  "globals": {
    "nav": true,
    "Board": true,
    "wall": true,
    "vkManagerApi": true,
    "vkmOptions": true,
    "define": true,
    "marked": true,
    "Pagination": true
  },
  "env": {
    "browser": true,
    "webextensions": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "no-useless-escape": 0,
    "no-console": 0,
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
